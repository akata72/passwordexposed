@model IEnumerable<pwdExposed.ViewModels.DataBreachViewModel>

@using Microsoft.AspNetCore.Html;

@{ if (Model != null) {

        <div class="row">
            <div class="col-12 breach">
                <h1 class="display-4">All Data Breaches</h1>
                <p>List of breaches. </p>
                <a class="btn btn-primary" href="/" role="button">Check your account</a>
            </div>
        </div>


        @foreach (var item in Model) {
            var html = new HtmlString(item.Description);

            <div class="row" style="padding-top:20px">

                <div class="col-md-2">
                    <h3>@item.Title</h3>
                </div>

                <div class="col-md-8" style="text-align:left">
                    <b>@item.Title:</b> @html<br>
                    <small>
                        <b>Breached data:</b>

                      @foreach (var dataclass in item.DataClasses)
                    {
                            <span class="badge badge-warning">@dataclass.ToString()</span>
                    }
                   
                        <b>Reported:</b> @item.BreachDate.ToString("MMM d, yyyy") <b>Added to HIBP:</b> @item.AddedDate.ToString("MMM d, yyyy")
                   </small>

                </div>

                <div class="col-md-2">
                    <small>@item.PwnCount breached accounts</small>
                </div>

                <br>
            </div>
            <br>

        }

    }
    else
    {
        <div class="row">

            <div class="col-12 nobreach">
                <h1 class="display-4">No breach found</h1>
                <p>No breaches are returned. A problem might have occurred.</p>
            </div>
        </div>
        <br>
        <br>
    }
}


